{
    "name": "xgraphql/schema-executor",
    "description": "Abstraction layer for executing GraphQL schema",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "XGraphQL\\SchemaExecutor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XGraphQL\\SchemaExecutor\\Test\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "webonyx/graphql-php": "^15.9"
    },
    "config": {
        "sort-packages": true
    }
}
